<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- icon link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <!-- favicon -->
    <link rel="icon" href="/images/transparent.png" type="image/x-icon" />
    <!-- link admin.css -->
    <link rel="stylesheet" href="/styles/admin.css" />
    <link rel="stylesheet" href="/styles/addstudent.css">
    <link rel="stylesheet" href="/styles/explorestudent.css">
    <title>All Care Academy Admin</title>
    <style>
      .adminactive {
        width: 0%;
        transition: 0.3s;
      }
      .adminacright {
        width: 100%;
        transition: 0.3s;
      }
    </style>
  </head>
  <body>
    <div class="admin">
      <!-- admin sidebar -->
      <div class="admin-left">
        <div class="title">
          <div class="logo">
            <img src="/images/transparentlogo.png" alt="">
          </div>
          <h3>All Care Academy</h3>
          <div class="removebox">
            <i class="fas fa-close"></i>
          </div>
        </div>
        <!-- menu -->
        <div class="main-menu">
            <ul>
              <li>
                <a href="/admin"><i class="	fas fa-book-reader"></i> Students</a>
              </li>
              <li>
                <a href="/add-student"><i class="	fas fa-user-graduate"></i>Add Student</a>
              </li>
              <li>
                <a href="/result-add"><i class='bx bxs-book-add' ></i>Add Result</a>
              </li>
              <li>
                <a href="/students-result"><i class='bx bxs-bar-chart-alt-2'></i>Result</a>
              </li>
              <li>
                <a href="/message"><i class='bx bxs-send' ></i> Message</a>
              </li>
              <li>
                <a href="/logout"><i class="bx bx-log-out"></i> Log Out</a>
              </li>
            </ul>
          </div>
          
        <!-- menu -->
      </div>
      <!-- admin sidebar -->
      <div class="admin-right">
        <!-- top header -->
        <div class="top-header">
            <div class="side-icon">
              <i class="bx bx-menu"></i>
            </div>
            <div class="side-icon2">
              <i class="bx bx-menu"></i>
            </div>
            <div class="admin-pic">
              <button>Download Free</button>
              <a href="#">
                <img src="/images/man.png" alt="">
              </a>
            </div>
          </div>
           <!-- student Details -->
             <div class="student-result">
               <div class="resultitle-box">
                <div class="result-title">
                  <div class="std-image">
                    <img src="<%=studentimage.student_photo%>" alt="">
                  </div>
               </div>
               <div class="result-registration">
                <h2><%=resultname.name%></h1>
                   <h3>Registration: <span><%=resultname.registration%></span></h2>
                   <h3>Class-<span><%=resultname.class_name%></span></h2>
                   <h3>Organization: <span>All Care Academy</span></h2>
               </div>
               </div>
       <%if(resultfind.length>0){%>
        <div class="table-main">
           <table id="customers">
             <tr>
               <th>Date</th>
               <th>Bangla</th>
               <th>English</th>
               <th>Math</th>
               <th>Science</th>
               <th>ICT</th>
               <th>Social</th>
               <th>Operation</th>
             </tr>
             <%if(resultfind.length>0){%>
                 <%resultfind.forEach((data)=>{%>
                   <tr>
                       <form action="/update-result/<%=data._id%>"method="post"onsubmit="handleform()">
                        <td><input type="date"value="<%=data.date%>"name="date"id="datebox"></td>
                        <%if(data.subject_name=="bangla"){%>
                         <td><input type="number"value="<%=data.subject_number%>"name="bangla_number">/
                          <input type="number"value="<%=data.exam_number%>"name="bangla_exam"></td>
                         <%}else{%>
                        <td><input type="number"value="<%=data.bangla_number%>"name="bangla_number">/<input type="number"value="<%=data.bangla_exam%>"name="bangla_exam"></td>
                        <%}%>
                        <%if(data.subject_name=="english"){%>
                        <td><input type="number"value="<%=data.subject_number%>"name="english_number">/<input type="number"value="<%=data.exam_number%>"name="english_exam"></td>
                        <%}else{%>
                        <td><input type="number"value="<%=data.english_number%>"name="english_number">/<input type="number"value="<%=data.english_exam%>"name="english_exam"></td>
                        <%}%>
                        <%if(data.subject_name=="math"){%>
                         <td><input type="number"value="<%=data.subject_number%>"name="math_number">/<input type="number"value="<%=data.exam_number%>"name="math_exam"></td>
                         <%}else{%>
                        <td><input type="number"value="<%=data.math_number%>"name="math_number">/<input type="number"value="<%=data.math_exam%>"name="math_exam"></td>
                        <%}%>
                        <%if(data.subject_name=="science"){%>
                         <td><input type="number"value="<%=data.subject_number%>"name="science_number">/<input type="number"value="<%=data.exam_number%>"name="science_exam"></td>
                         <%}else{%>
                        <td><input type="number"value="<%=data.science_number%>"name="science_number">/<input type="number"value="<%=data.science_exam%>"name="science_exam"></td>
                        <%}%>
                        <%if(data.subject_name=="ict"){%>
                         <td><input type="number"value="<%=data.subject_number%>"name="ict_number">/<input type="number"value="<%=data.exam_number%>"name="ict_exam"></td>
                         <%}else{%>
                        <td><input type="number"value="<%=data.ict_number%>"name="ict_number">/<input type="number"value="<%=data.ict_exam%>"name="ict_exam"></td>
                        <%}%>
                        <%if(data.subject_name=="social"){%>
                         <td><input type="number"value="<%=data.subject_number%>"name="social_number">/<input type="number"value="<%=data.exam_number%>"name="social_exam"></td>
                         <%}else{%>
                        <td><input type="number"value="<%=data.social_number%>"name="social_number">/<input type="number"value="<%=data.social_exam%>"name="social_exam"></td>
                        <%}%>
                        <td> 
                          <button id="submitform"><i class="fa fa-eye"></i></button>
                          <a href="/delete-student-result/<%=data._id%>"><i class='bx bxs-trash-alt'></i></a>
                       </td>
                      </tr>
                       </form>
                 <%})%>
             <%}%>
           </table>
           <div class="opration-btn">
            <h3>Total:<%=allnumber%></h3>
             <button><i class='bx bxs-printer'></i></button>
           </div>
        </div>
       <%}else{%>
        <h3>This Student Do Not Have Any Marksheet</h1>
       <%}%>
             </div>
           <!-- student Details -->
      </div>
    </div>
    <!-- chart.js link -->
    <script>
      let submitform=document.getElementById("submitform");
      submitform.addEventListener("click",()=>{
        window.location.reload();
      })
      let adminleft = document.querySelector(".admin-left");
      let adminright = document.querySelector(".admin-right");
      let sideicon = document.querySelector(".side-icon");
      sideicon.addEventListener("click", function () {
        adminleft.classList.toggle("adminactive");
        adminright.classList.toggle("adminacright");
      });
      let sideicon2 = document.querySelector(".side-icon2");
      sideicon2.addEventListener("click", function () {
        adminleft.style.left = "0";
      });
      let removebox = document.querySelector(".removebox");
      removebox.addEventListener("click", () => {
        adminleft.style.left = "-400px";
      });
      var oriloaction = window.location.pathname;
      var linka = document.querySelectorAll("ul li a").forEach((e) => {
        if (e.href.includes(oriloaction)) {
          let icons=e.querySelector("i");
          e.classList.add("activelink");
          e.style.color="white";
          icons.style.color="white"
        }
      });
    </script>
  </body>
</html>
